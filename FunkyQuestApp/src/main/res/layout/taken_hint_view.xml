<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp">

    <TextView
            android:id="@+id/tv_hint_title"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:text="HINT_TITLE"
            android:layout_marginBottom="10dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

        <TextView
                android:id="@+id/tv_hint_text"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:text="A huge text description of the taskA huge text description of the taskA huge text description of the taskA huge text description of the taskA huge text description of the task"
                android:textSize="15sp"/>

        <ImageButton
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:id="@+id/imageButton"
                android:layout_height="55dp"/>
    </LinearLayout>

</LinearLayout>